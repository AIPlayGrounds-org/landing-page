---
import type { Translations } from '../i18n';

interface Props { t: Translations; }
const { t } = Astro.props;

const socials = [
  {
    name: "LinkedIn", href: "#",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>`,
    desc: "Professional updates & networking"
  },
  {
    name: "Instagram", href: "#",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>`,
    desc: "Behind the scenes & visual community"
  },
  {
    name: "Twitter / X", href: "#",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4l11.733 16h4.267l-11.733 -16z"/><path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"/></svg>`,
    desc: "Latest updates & tech community"
  },
  {
    name: "Discord", href: "#",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 12a1 1 0 1 0 2 0 1 1 0 0 0 -2 0"/><path d="M14 12a1 1 0 1 0 2 0 1 1 0 0 0 -2 0"/><path d="M15.5 17c0 1 1.5 3 2 3 1.5 0 2.833 -1.667 3.5 -3 .667 -1.667 .5 -5.833 -1.5 -11.5 -1.457 -1.015 -3 -1.34 -4.5 -1.5l-1 2.5"/><path d="M8.5 17c0 1 -1.356 3 -1.832 3 -1.429 0 -2.698 -1.667 -3.333 -3 -.635 -1.667 -.476 -5.833 1.428 -11.5 1.388 -1.015 2.782 -1.34 4.237 -1.5l1 2.5"/></svg>`,
    desc: "Real-time community & support"
  },
  {
    name: "WhatsApp", href: "#",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"/><path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"/></svg>`,
    desc: "Community groups & updates"
  },
];
---

<section id="community" class="py-20 lg:py-32 bg-bg-secondary">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 reveal">
      <span class="inline-block text-brand-blue text-sm font-semibold uppercase tracking-wider mb-4">{t.community.label}</span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-text-primary mb-6">{t.community.title}</h2>
      <p class="text-text-muted text-lg max-w-2xl mx-auto">{t.community.subtitle}</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4 reveal-stagger reveal">
      {socials.map((social) => (
        <a href={social.href} target="_blank" rel="noopener noreferrer"
          class="bg-bg-tertiary border border-border-primary rounded-xl p-6 text-center hover:border-brand-blue/40 hover:shadow-[0_0_20px_rgba(96,165,250,0.15)] transition-all duration-300 group">
          <div class="flex justify-center mb-3 text-text-subtle group-hover:text-brand-blue transition-colors duration-300" set:html={social.icon} />
          <h3 class="text-text-primary font-semibold text-sm mb-1">{social.name}</h3>
          <p class="text-text-subtle text-xs">{social.desc}</p>
        </a>
      ))}
    </div>
  </div>
</section>
