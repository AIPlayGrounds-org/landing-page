---
import type { Translations } from '../i18n';

interface Props { t: Translations; }
const { t } = Astro.props;
---

<section id="trajectory" class="py-20 lg:py-32 bg-bg-primary relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 reveal">
      <span class="inline-block text-brand-blue text-sm font-semibold uppercase tracking-wider mb-4">{t.trajectory.label}</span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-text-primary mb-6">{t.trajectory.title}</h2>
      <p class="text-text-muted text-lg max-w-2xl mx-auto">{t.trajectory.subtitle}</p>
    </div>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-20 reveal-stagger reveal">
      {t.trajectory.stats.map((stat) => (
        <div class="bg-bg-tertiary border border-border-primary rounded-xl p-6 lg:p-8 text-center hover:border-brand-blue/30 transition-all duration-300">
          <div class="text-3xl lg:text-5xl font-extrabold text-brand-blue mb-2">
            <span class="counter" data-target={stat.value}>0</span>{stat.suffix}
          </div>
          <p class="text-text-muted text-sm">{stat.label}</p>
        </div>
      ))}
    </div>

    <div class="relative">
      <div class="hidden lg:block absolute left-1/2 top-0 bottom-0 w-px bg-border-primary -translate-x-1/2"></div>
      <div class="space-y-8 lg:space-y-12">
        {t.trajectory.events.map((event, i) => (
          <div class={`reveal flex flex-col lg:flex-row items-start gap-6 lg:gap-12 ${i % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
            <div class={`lg:w-1/2 ${i % 2 === 1 ? 'lg:text-right' : ''}`}>
              <div class="bg-bg-tertiary border border-border-primary rounded-xl p-6 hover:border-brand-blue/30 hover:shadow-[0_0_20px_rgba(96,165,250,0.1)] transition-all duration-300">
                <div class={`flex flex-wrap gap-2 mb-3 ${i % 2 === 1 ? 'lg:justify-end' : ''}`}>
                  {event.tags.map((tag) => (
                    <span class="text-xs bg-brand-yellow/10 text-brand-yellow px-2 py-0.5 rounded font-medium">{tag}</span>
                  ))}
                </div>
                <h3 class="text-text-primary font-bold text-xl mb-2">{event.title}</h3>
                <p class="text-text-muted text-sm">{event.desc}</p>
              </div>
            </div>
            <div class="hidden lg:flex absolute left-1/2 -translate-x-1/2 w-4 h-4 rounded-full bg-brand-blue border-4 border-bg-primary" style={`top: calc(${i * 25}% + 5%)`}></div>
            <div class="lg:w-1/2"></div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
