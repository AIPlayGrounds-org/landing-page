---
import type { Translations } from '../i18n';

interface Props { t: Translations; }
const { t } = Astro.props;
const m = t.umbral.mockup;
---

<section class="py-20 lg:py-32 bg-bg-secondary relative overflow-hidden">
  <div class="absolute top-1/3 right-0 w-80 h-80 gradient-glow-yellow rounded-full blur-3xl opacity-30"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <div class="reveal">
        <span class="inline-block text-brand-yellow text-sm font-semibold uppercase tracking-wider mb-4">{t.umbral.label}</span>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-text-primary mb-4">{t.umbral.title}</h2>
        <p class="text-xl text-brand-blue font-semibold italic mb-6">{t.umbral.tagline}</p>
        <p class="text-text-muted text-lg mb-8" set:html={t.umbral.desc} />

        <div class="space-y-4">
          {t.umbral.features.map((f) => (
            <div class="flex items-start gap-4 group">
              <span class="flex-shrink-0 w-10 h-10 rounded-lg bg-brand-blue/10 flex items-center justify-center text-xl">{f.icon}</span>
              <div>
                <h3 class="text-text-primary font-semibold">{f.title}</h3>
                <p class="text-text-muted text-sm">{f.desc}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <div class="reveal" style="animation-delay: 200ms;">
        <div class="bg-bg-tertiary border border-border-primary rounded-xl overflow-hidden">
          <div class="flex items-center gap-2 px-4 py-3 border-b border-border-primary bg-bg-elevated">
            <div class="w-3 h-3 rounded-full bg-error"></div>
            <div class="w-3 h-3 rounded-full bg-brand-yellow"></div>
            <div class="w-3 h-3 rounded-full bg-success"></div>
            <span class="ml-2 text-text-subtle text-xs font-mono">{m.url}</span>
          </div>
          <div class="p-6 space-y-4">
            <div class="flex items-center justify-between mb-2">
              <span class="text-text-primary font-semibold">{m.header}</span>
              <span class="text-brand-blue text-xs font-mono bg-brand-blue/10 px-2 py-1 rounded">{m.cohort}</span>
            </div>
            <div class="space-y-3">
              <div class="bg-bg-primary border border-border-primary rounded-lg p-4">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-text-primary text-sm font-medium">{m.project1.name}</span>
                  <span class="text-success text-xs flex items-center gap-1">● {m.project1.status}</span>
                </div>
                <div class="flex gap-2 mb-2">
                  {m.project1.tags.map((tag) => (
                    <span class="text-xs bg-brand-blue/10 text-brand-blue px-2 py-0.5 rounded">{tag}</span>
                  ))}
                </div>
                <div class="w-full bg-bg-elevated rounded-full h-1.5">
                  <div class="bg-brand-blue h-1.5 rounded-full" style={`width: ${m.project1.pct}%`}></div>
                </div>
                <div class="flex justify-between mt-1">
                  <span class="text-text-subtle text-xs">{m.fundamentalsLabel}</span>
                  <span class="text-text-muted text-xs">{m.project1.pct}%</span>
                </div>
              </div>
              <div class="bg-bg-primary border border-border-primary rounded-lg p-4">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-text-primary text-sm font-medium">{m.project2.name}</span>
                  <span class="text-brand-yellow text-xs flex items-center gap-1">● {m.project2.status}</span>
                </div>
                <div class="flex gap-2 mb-2">
                  {m.project2.tags.map((tag) => (
                    <span class="text-xs bg-brand-blue/10 text-brand-blue px-2 py-0.5 rounded">{tag}</span>
                  ))}
                </div>
                <div class="w-full bg-bg-elevated rounded-full h-1.5">
                  <div class="bg-brand-yellow h-1.5 rounded-full" style={`width: ${m.project2.pct}%`}></div>
                </div>
                <div class="flex justify-between mt-1">
                  <span class="text-text-subtle text-xs">{m.fundamentalsLabel}</span>
                  <span class="text-text-muted text-xs">{m.project2.pct}%</span>
                </div>
              </div>
            </div>
            <div class="grid grid-cols-3 gap-3 pt-2">
              <div class="bg-bg-primary border border-border-primary rounded-lg p-3 text-center">
                <div class="text-brand-blue font-bold">2</div>
                <div class="text-text-subtle text-xs">{m.statsLabels[0]}</div>
              </div>
              <div class="bg-bg-primary border border-border-primary rounded-lg p-3 text-center">
                <div class="text-brand-yellow font-bold">12</div>
                <div class="text-text-subtle text-xs">{m.statsLabels[1]}</div>
              </div>
              <div class="bg-bg-primary border border-border-primary rounded-lg p-3 text-center">
                <div class="text-success font-bold">47</div>
                <div class="text-text-subtle text-xs">{m.statsLabels[2]}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
