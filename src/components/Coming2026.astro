---
import type { Translations } from '../i18n';

interface Props { t: Translations; }
const { t } = Astro.props;
---

<section class="py-20 lg:py-32 bg-bg-primary relative">
  <div class="absolute bottom-0 left-1/3 w-96 h-96 gradient-glow-blue rounded-full blur-3xl opacity-20"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16 reveal">
      <span class="inline-block text-brand-yellow text-sm font-semibold uppercase tracking-wider mb-4">{t.coming2026.label}</span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-text-primary mb-6">{t.coming2026.title}</h2>
      <p class="text-text-muted text-lg max-w-2xl mx-auto">{t.coming2026.subtitle}</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-12 reveal-stagger reveal">
      {t.coming2026.events.map((event) => (
        <div class="bg-bg-tertiary border border-border-primary rounded-xl p-6 hover:border-brand-blue/30 hover:shadow-[0_0_20px_rgba(96,165,250,0.1)] transition-all duration-300 group">
          <div class="flex items-center gap-3 mb-4">
            <span class="text-3xl">{event.icon}</span>
            <span class="text-xs bg-brand-yellow/10 text-brand-yellow px-2 py-0.5 rounded font-medium">{event.tag}</span>
          </div>
          <h3 class="text-text-primary font-bold text-xl mb-2 group-hover:text-brand-blue transition-colors">{event.title}</h3>
          <p class="text-text-muted text-sm">{event.desc}</p>
        </div>
      ))}
    </div>

    <div class="text-center reveal">
      <a href="#waitlist" class="inline-block border-2 border-brand-yellow text-brand-yellow px-8 py-4 rounded-lg font-semibold text-lg hover:bg-brand-yellow/10 transition-all duration-300">
        {t.coming2026.cta}
      </a>
    </div>
  </div>
</section>
