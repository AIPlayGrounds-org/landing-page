---
import type { Translations } from '../i18n';

interface Props { t: Translations; }
const { t } = Astro.props;

const partners = ["Looper.ai", "SpinOut", "Globant", "LetyMind", "The Hackathon Company", "Pymut", "UPCH", "Bioincuba", "UTEC Ventures"];
---

<footer class="bg-bg-secondary border-t border-border-primary pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 lg:grid-cols-5 gap-8 mb-12">
      <div class="col-span-2 lg:col-span-1">
        <a href={t.lang === 'es' ? '/es/' : '/'} class="flex items-center gap-2 text-text-primary font-bold text-xl mb-4">
          <span class="text-brand-blue">AI</span>
          <span>PlayGrounds</span>
        </a>
        <p class="text-text-muted text-sm">{t.footer.tagline}</p>
      </div>

      {Object.entries(t.footer.columns).map(([title, items]) => (
        <div>
          <h4 class="text-text-primary font-semibold text-sm mb-4">{title}</h4>
          <ul class="space-y-2">
            {items.map((item) => (
              <li>
                <a href={item.href} class="text-text-muted text-sm hover:text-brand-blue transition-colors duration-300">
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="border-t border-border-primary pt-8 mb-8">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-text-muted text-sm">{t.footer.newsletter}</p>
        <div class="flex gap-2 w-full sm:w-auto">
          <input
            type="email"
            placeholder={t.finalCta.placeholder}
            class="flex-1 sm:w-64 px-4 py-2 bg-bg-tertiary border border-border-primary rounded-lg text-text-primary text-sm placeholder:text-text-subtle focus:outline-none focus:border-brand-blue transition-all"
          />
          <button class="gradient-cta text-text-on-brand px-4 py-2 rounded-lg font-semibold text-sm hover:scale-105 transition-transform cursor-pointer">
            {t.footer.subscribe}
          </button>
        </div>
      </div>
    </div>

    <div class="border-t border-border-primary pt-8 mb-8">
      <p class="text-text-subtle text-xs text-center mb-4 uppercase tracking-wider">{t.footer.partnersLabel}</p>
      <div class="flex flex-wrap justify-center gap-3">
        {partners.map((p) => (
          <span class="text-text-subtle text-xs px-3 py-1 bg-bg-tertiary rounded border border-border-primary">
            {p}
          </span>
        ))}
      </div>
    </div>

    <div class="border-t border-border-primary pt-8 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-text-subtle text-xs">{t.footer.copyright}</p>
      <div class="flex items-center gap-4">
        <a href={t.langToggle.href} class="text-text-subtle text-xs hover:text-text-primary transition-colors">
          {t.langToggle.label}
        </a>
        <div class="flex items-center gap-3">
          {["LinkedIn", "Instagram", "X", "Discord"].map((name) => (
            <a href="#" class="text-text-subtle hover:text-brand-blue transition-colors text-xs">
              {name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
