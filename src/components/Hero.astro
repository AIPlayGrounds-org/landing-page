---
import type { Translations } from '../i18n';

interface Props { t: Translations; }
const { t } = Astro.props;

const partners = [
  "Looper.ai", "SpinOut", "Globant", "LetyMind",
  "The Hackathon Company", "Pymut", "UPCH", "Bioincuba", "UTEC Ventures"
];
---

<section id="hero" class="relative min-h-screen flex items-center pt-20 overflow-hidden">
  <div class="absolute top-0 left-1/4 w-96 h-96 gradient-glow-blue rounded-full blur-3xl opacity-50"></div>
  <div class="absolute bottom-1/4 right-1/4 w-80 h-80 gradient-glow-yellow rounded-full blur-3xl opacity-40"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20 relative z-10">
    <div class="text-center max-w-4xl mx-auto">
      <div class="inline-flex items-center gap-2 bg-bg-tertiary border border-border-primary rounded-full px-4 py-2 mb-8 animate-fade-in-up">
        <span class="text-brand-blue text-sm">ðŸš€</span>
        <span class="text-text-muted text-sm font-medium">{t.hero.badge}</span>
      </div>

      <h1 class="text-4xl sm:text-5xl lg:text-7xl font-extrabold text-text-primary leading-tight tracking-tight mb-6 animate-fade-in-up" style="animation-delay: 100ms;">
        {t.hero.headline1}<br />
        <span class="bg-gradient-to-r from-brand-blue to-brand-yellow bg-clip-text text-transparent">
          {t.hero.headline2}
        </span>
      </h1>

      <p class="text-lg sm:text-xl text-text-muted max-w-2xl mx-auto mb-10 animate-fade-in-up" style="animation-delay: 200ms;">
        {t.hero.subheadline} <strong class="text-text-primary">{t.hero.subheadlineStrong}</strong>.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16 animate-fade-in-up" style="animation-delay: 300ms;">
        <a href="#waitlist" class="gradient-cta text-text-on-brand px-8 py-4 rounded-lg font-bold text-lg hover:scale-105 transition-transform duration-300 animate-pulse-glow w-full sm:w-auto text-center">
          {t.hero.ctaPrimary}
        </a>
        <a href="#program" class="border-2 border-brand-yellow text-brand-yellow px-8 py-4 rounded-lg font-semibold text-lg hover:bg-brand-yellow/10 transition-all duration-300 w-full sm:w-auto text-center">
          {t.hero.ctaSecondary}
        </a>
      </div>

      <!-- Code mockup -->
      <div class="relative max-w-2xl mx-auto mb-16 animate-fade-in-up" style="animation-delay: 400ms;">
        <div class="bg-bg-tertiary border border-border-primary rounded-xl p-6 text-left font-mono text-sm">
          <div class="flex items-center gap-2 mb-4">
            <div class="w-3 h-3 rounded-full bg-error"></div>
            <div class="w-3 h-3 rounded-full bg-brand-yellow"></div>
            <div class="w-3 h-3 rounded-full bg-success"></div>
            <span class="ml-2 text-text-subtle text-xs">ai-techproducts.py</span>
          </div>
          <code class="text-text-muted leading-relaxed block">
            <span class="text-brand-blue">def</span> <span class="text-brand-yellow">build_with_understanding</span>(project):<br />
            &nbsp;&nbsp;<span class="text-text-subtle">{t.hero.codeComment1}</span><br />
            &nbsp;&nbsp;solution = <span class="text-brand-blue">ai.generate</span>(project)<br />
            &nbsp;&nbsp;<span class="text-text-subtle">{t.hero.codeComment2}</span><br />
            &nbsp;&nbsp;<span class="text-brand-blue">assert</span> can_explain(solution) <span class="text-text-subtle">{t.hero.codeComment3}</span><br />
            &nbsp;&nbsp;<span class="text-brand-blue">assert</span> can_debug(solution)<br />
            &nbsp;&nbsp;<span class="text-brand-blue">assert</span> can_modify(solution)<br />
            &nbsp;&nbsp;<span class="text-brand-blue">return</span> <span class="text-success">deploy</span>(solution, users=<span class="text-brand-yellow">real_users</span>)
          </code>
        </div>
      </div>
    </div>

    <div class="relative overflow-hidden py-8 border-t border-border-primary">
      <p class="text-center text-text-subtle text-sm mb-6 font-medium uppercase tracking-wider">{t.hero.partnersLabel}</p>
      <div class="overflow-hidden">
        <div class="marquee-track">
          {[...partners, ...partners].map((name) => (
            <div class="flex-shrink-0 mx-8 px-6 py-3 bg-bg-tertiary border border-border-primary rounded-lg text-text-muted text-sm font-medium hover:text-brand-blue hover:border-brand-blue/30 transition-all duration-300">
              {name}
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
